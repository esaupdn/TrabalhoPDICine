<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggestionActivity"
    android:background="@color/black">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="426dp"
        android:layout_height="48dp"
        android:background="#BA0000"
        android:title="Sugestão da Semana!"
        android:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/VideoYoutube"
        android:layout_width="446dp"
        android:layout_height="214dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/LFilmeNome"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Deadpool e Wolverine"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VideoYoutube" />

    <TextView
        android:id="@+id/LFilmeDesc"
        android:layout_width="404dp"
        android:layout_height="208dp"
        android:layout_marginTop="48dp"
        android:text="&quot;Deadpool&quot; e &quot;Wolverine&quot; são personagens icônicos dos quadrinhos da Marvel, conhecidos por seu estilo único e personalidade marcante. Deadpool, interpretado por Ryan Reynolds, é um anti-herói irreverente, com habilidades de regeneração e um senso de humor sarcástico, frequentemente quebrando a quarta parede. Wolverine, vivido por Hugh Jackman, é um mutante com garras de adamantium, poderes de cura e um temperamento feroz. A dinâmica entre eles é explosiva e divertida, com Deadpool frequentemente provocando Wolverine, que responde com seu típico humor seco e letalidade. Ambos os personagens têm um grande impacto na cultura pop, sendo figuras centrais no universo dos X-Men."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LFilmeNome" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:text="Sinopse:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LFilmeNome" />
</androidx.constraintlayout.widget.ConstraintLayout>